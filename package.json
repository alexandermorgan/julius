{
    "name": "julius",
    "description": "Web application for formalized score control.",
    "version": "0.0.2",
    "author": "Christopher Antila <christopher@antila.ca>",
    "license": "GPL-3.0",
    "repository": "https://jameson.adjectivenoun.ca:ncoda/julius.git",
    "main": "js/electron_main.js",
    "dependencies": {
        "amazeui": "2.5.2",
        "amazeui-react": "1.0.1",
        "codemirror": "5.11.0",
        "electron-prebuilt": "0.36.7",
        "history": "^1.17",
        "nuclear-js": "1.3.0",
        "react": "0.14.7",
        "react-dom": "0.14.7",
        "react-router": "1.0.3",
        "react-split-pane": "^0.1.23"
    },
    "devDependencies": {
        "babelify": "7.2.0",
        "babel-cli": "^6.5.1",
        "babel-jest": "6.0.1",
        "babel-plugin-add-module-exports": "^0.1.2",
        "babel-preset-es2015": "6.5.0",
        "babel-preset-react": "6.5.0",
        "eslint": "1.10.3",
        "eslint-plugin-react": "3.16.1",
        "jest-cli": "0.8.2",
        "less": "2.6.0",
        "less-plugin-clean-css": "1.5.1",
        "react-addons-test-utils": "0.14.7",
        "watchify": "3.7.0"
    },
    "browserify": {
        "transform": [
            "babelify"
        ]
    },
    "scripts": {
        "start": "python3 devserver",
        "test": "jest"
    },
    "jest": {
        "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
        "testFileExtensions": [
            "es6",
            "js"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "es6"
        ],
        "unmockedModulePathPatterns": [
            "<rootDir>/node_modules/react",
            "<rootDir>/node_modules/react-dom",
            "<rootDir>/node_modules/react-addons-test-utils",
            "<rootDir>/node_modules/nuclear-js",
            "<rootDir>/js/nuclear",
            "<rootDir>/js/nuclear/stores"
        ],
        "testDirectoryName": "tests",
        "testRunner": "<rootDir>/node_modules/jest-cli/src/testRunners/jasmine/jasmine2.js"
    },
    "babel": {
        "presets": [
            "es2015",
            "react"
        ],
        "comments": true,
        "compact": false
    }
}
