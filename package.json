{
    "name": "julius",
    "description": "Web application for formalized score control.",
    "version": "0.0.2",
    "author": "Christopher Antila <christopher@antila.ca>",
    "license": "GPL-3.0",
    "repository": "https://jameson.adjectivenoun.ca:ncoda/julius.git",
    "main": "js/electron_main.js",
    "dependencies": {
        "codemirror": "5.8.0",
        "electron-prebuilt": "0.34.4",
        "history": "1.12.6",
        "nuclear-js": "1.2.1",
        "react": "0.14.3",
        "react-dom": "0.14.3",
        "react-router": "1.0.1"
    },
    "devDependencies": {
        "less": "2.5.3",
        "less-plugin-clean-css": "1.5.1",
        "babelify": "7.2.0",
        "babel-preset-es2015": "6.1.18",
        "babel-preset-react": "6.1.18",
        "watchify": "3.6.1",
        "jest-cli": "0.8.2",
        "babel-jest": "6.0.1",
        "react-addons-test-utils": "0.14.3"
    },
    "browserify": {
        "transform": ["babelify"]
        },
    "scripts": {
        "start": "python3 devserver",
        "test": "jest"
    },
    "jest": {
        "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
        "testFileExtensions": ["es6", "js"],
        "moduleFileExtensions": ["js", "json", "es6"],
        "unmockedModulePathPatterns": [
            "<rootDir>/node_modules/react",
            "<rootDir>/node_modules/react-dom",
            "<rootDir>/node_modules/react-addons-test-utils"
        ],
        "testDirectoryName": "tests"
    },
    "babel": {
        "presets": ["es2015", "react"],
        "comments": true,
        "compact": false
    }
}
